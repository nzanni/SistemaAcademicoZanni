@page
@model SistemaAcademicoZanni.Pages.Alumnos.IndexModel
@{

}
<a asp-page="CreateAlumno" class="btn btn-success mb-3">Agregar Alumno</a>
@if(Model.Alumnos.Count == 0) {
        <p class="text-muted">No hay alumnos cargados </p>
    }
else {
<h2>Listado de Alumnos</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>DNI</th>
            <th>Email</th>
            <th>Fecha de nacimiento</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var alumno in Model.Alumnos)
        {
            <tr>
                <td>@alumno.Id</td>
                <td>@alumno.Nombre</td>
                <td>@alumno.Apellido</td>
                <td>@alumno.DNI</td>
                <td>@alumno.Email</td>
                <td>@alumno.FechaDeNacimiento.ToShortDateString()</td>
            </tr>
            <td>
                <a asp-page="EditAlumno" asp-route-id="@alumno.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-page="DeleteAlumno" asp-route-id="@alumno.Id" class="btn btn-danger btn-sm">Eliminar</a>
            </td>

        }
    </tbody>
</table>
}